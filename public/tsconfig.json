{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2015",
    "allowJs": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "skipLibCheck" : true,
    "strict": true,
    "target": "es2015",
    "watch": true,
    "declaration": true
  },

  "include": [
    "**/*.ts"
  ],

  "exclude": [
    "**/*.d.ts"
  ]
}